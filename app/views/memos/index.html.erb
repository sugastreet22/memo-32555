<div class="container">
    <h3>Memo List</h3>

    <a href="/new" class="btn btn-primary">新規メモ作成</a>

    <% @memos.each do |memo|%>
  
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header text-white bg-success mb-3" style="max-width: 30rem;">
          <%= memo.title %>
        </div>
        <div class="card-block">
          <blockquote class="card-blockquote">
            <p><%= memo.body %></p>
        </div>
      </div>
    </div>
   
    <% end %>
</div>

